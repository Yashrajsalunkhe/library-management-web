{
  "name": "library-management",
  "version": "1.0.0",
  "description": "Study Room Library Management System",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --config config/vite.config.mjs",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build": "vite build --config config/vite.config.mjs",
    "electron:build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently \"npm run dev\" \"npm run wait-and-electron\"",
    "wait-and-electron": "cross-env NODE_ENV=development node scripts/wait-and-start.js",
    "start:windows": "scripts\\start.bat",
    "start:powershell": "powershell -ExecutionPolicy Bypass -File scripts\\start.ps1",
    "start:linux": "chmod +x scripts/start.sh && ./scripts/start.sh",
    "clean:windows": "rmdir /s /q dist dist-electron node_modules\\.cache 2>nul || echo Cache cleared",
    "clean:unix": "rm -rf dist dist-electron node_modules/.cache",
    "clean": "npm run clean:windows || npm run clean:unix",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo 'Tests not configured yet'"
  },
  "keywords": [
    "library",
    "management",
    "electron",
    "react",
    "sqlite",
    "biometric"
  ],
  "author": "Yashraj",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.1",
    "exceljs": "^4.4.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "pdfmake": "^0.2.10",
    "qrcode": "^1.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite": "^7.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.yashraj.library-management",
    "productName": "Library Management System",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
